{
  "python": {
    "meta": {
      "icon": "FaPython",
      "description": "A beginner-friendly language for data, AI, and web development.",
      "time": "6-12 months"
    },
    "beginner": {
      "title": "Python Roadmap - Beginner",
      "chapters": [
        {
          "title": "Introduction",
          "topics": [
            "What is Python?",
            "Install Python",
            "Hello World",
            "Python Interpreter & REPL",
            "Basic Syntax & Indentation",
            "Comments in Python"
          ],
          "time": "1 week"
        },
        {
          "title": "Data Types & Variables",
          "topics": [
            "Numbers & Math",
            "Strings & String Methods",
            "Booleans",
            "Lists",
            "Tuples",
            "Sets",
            "Dictionaries",
            "Type Conversion",
            "Variables & Constants",
            "f-Strings & String Formatting"
          ],
          "time": "2 weeks"
        },
        {
          "title": "Operators & Expressions",
          "topics": [
            "Arithmetic Operators",
            "Comparison Operators",
            "Logical Operators",
            "Bitwise Operators",
            "Assignment Operators",
            "Membership & Identity Operators",
            "Operator Precedence"
          ],
          "time": "1 week"
        },
        {
          "title": "Control Flow",
          "topics": [
            "If-Else Statements",
            "Nested Conditions",
            "For Loops",
            "While Loops",
            "Loop Control (break, continue, pass)",
            "List Comprehensions",
            "Ternary Operator"
          ],
          "time": "2 weeks"
        },
        {
          "title": "Functions",
          "topics": [
            "Defining Functions",
            "Arguments & Return Values",
            "Default & Keyword Arguments",
            "Variable-Length Arguments (*args, **kwargs)",
            "Lambda Functions",
            "Scope & Global Variables",
            "Docstrings"
          ],
          "time": "2 weeks"
        },
        {
          "title": "Basic Data Handling",
          "topics": [
            "Input & Output",
            "Reading User Input",
            "Printing with Formatting",
            "Basic Error Handling"
          ],
          "time": "1 week"
        }
      ]
    },
    "intermediate": {
      "title": "Python Roadmap - Intermediate",
      "chapters": [
        {
          "title": "Object-Oriented Programming",
          "topics": [
            "Classes & Objects",
            "Constructors (__init__)",
            "Instance vs Class Variables",
            "Instance, Class & Static Methods",
            "Inheritance",
            "Multiple Inheritance",
            "Polymorphism",
            "Encapsulation",
            "Magic/Dunder Methods (__str__, __len__, etc.)"
          ],
          "time": "3 weeks"
        },
        {
          "title": "Modules & Packages",
          "topics": [
            "Importing Modules",
            "Creating Custom Modules",
            "Using Built-in Modules (math, os, sys, random)",
            "Packages & __init__.py",
            "Virtual Environments",
            "Pip & Package Management"
          ],
          "time": "2 weeks"
        },
        {
          "title": "File Handling",
          "topics": [
            "Reading & Writing Files",
            "Working with Text Files",
            "Working with CSV & JSON",
            "With Context Manager",
            "Pickle Module (Serialization)"
          ],
          "time": "2 weeks"
        },
        {
          "title": "Error & Exception Handling",
          "topics": [
            "Try, Except, Finally",
            "Multiple Exceptions",
            "Raising Exceptions",
            "Custom Exceptions",
            "Best Practices"
          ],
          "time": "1 week"
        },
        {
          "title": "Libraries & Tools",
          "topics": [
            "NumPy Basics",
            "Pandas Basics",
            "Matplotlib Visualization",
            "Seaborn Basics",
            "Requests (API calls)",
            "BeautifulSoup (Web Scraping)"
          ],
          "time": "3 weeks"
        }
      ]
    },
    "advanced": {
      "title": "Python Roadmap - Advanced",
      "chapters": [
        {
          "title": "Advanced OOP",
          "topics": [
            "Class vs Static Methods",
            "Decorators",
            "Property Decorators (Getters & Setters)",
            "Iterators",
            "Generators & yield",
            "Context Managers (with __enter__ and __exit__)",
            "Metaclasses"
          ],
          "time": "3 weeks"
        },
        {
          "title": "Functional Programming",
          "topics": [
            "Map, Filter, Reduce",
            "Closures",
            "Higher-Order Functions",
            "Functools Module",
            "itertools Module"
          ],
          "time": "2 weeks"
        },
        {
          "title": "Concurrency & Parallelism",
          "topics": [
            "Multithreading",
            "Multiprocessing",
            "AsyncIO",
            "Concurrent Futures",
            "ThreadPoolExecutor & ProcessPoolExecutor"
          ],
          "time": "3 weeks"
        },
        {
          "title": "Database & Persistence",
          "topics": [
            "SQLite with Python",
            "MySQL/PostgreSQL Connector",
            "ORM with SQLAlchemy",
            "NoSQL with MongoDB"
          ],
          "time": "2 weeks"
        },
        {
          "title": "Web Development",
          "topics": [
            "Flask Basics",
            "Flask Routing & Templates",
            "Django Framework Basics",
            "Django Models & ORM",
            "FastAPI Basics",
            "Building REST APIs"
          ],
          "time": "4 weeks"
        },
        {
          "title": "Testing & Deployment",
          "topics": [
            "Unit Testing with unittest",
            "PyTest Framework",
            "Logging & Debugging",
            "Packaging Projects (setup.py, pyproject.toml)",
            "Virtual Environments Best Practices",
            "Docker Basics",
            "CI/CD Pipelines (GitHub Actions, Jenkins)"
          ],
          "time": "3 weeks"
        },
        {
          "title": "Data Science & AI (Optional Advanced Track)",
          "topics": [
            "Exploratory Data Analysis with Pandas",
            "Data Visualization with Matplotlib & Seaborn",
            "Machine Learning with Scikit-Learn",
            "Deep Learning with TensorFlow/Keras",
            "Natural Language Processing with NLTK/Spacy"
          ],
          "time": "6-8 weeks"
        }
      ]
    }
  },



